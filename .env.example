# GEO Hub â€” Environment Configuration
# Copy to .env and adjust values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=dev
# Options: dev, test, prod

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://geo_hub:geo_hub_password@localhost:5432/geo_hub
# For sync operations (alembic):
DATABASE_URL_SYNC=postgresql://geo_hub:geo_hub_password@localhost:5432/geo_hub

POSTGRES_USER=geo_hub
POSTGRES_PASSWORD=geo_hub_password
POSTGRES_DB=geo_hub

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_openssl_rand_hex_32

# JWT settings
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
# For production, use more workers: 4

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# TEST-ONLY ENDPOINTS (DEV/TEST ONLY!)
# =============================================================================
# WARNING: Must be false in production!
ENABLE_TEST_ENDPOINTS=true

# =============================================================================
# OBSERVABILITY
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# Structured logging format
LOG_FORMAT=json
# Options: json, text

# =============================================================================
# FEATURE FLAGS (can also be set via admin UI)
# =============================================================================
# These are initial values; runtime changes go to DB
FEATURE_MULTIPATH_ENABLED=true
FEATURE_FULL_MULTIPATH_ENABLED=false
FEATURE_CLEARING_ENABLED=true
